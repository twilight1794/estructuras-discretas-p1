<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/recurso_temasasig_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/recurso_temasasig_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:layout_constraintStart_toEndOf="@id/recurso_temasasig_num"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/recurso_temasasig_si"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/recurso_si"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@id/recurso_temasasig_titulo"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/recurso_temasasig_dato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/recurso_temasasig_titulo"
        app:layout_constraintTop_toBottomOf="@id/recurso_temasasig_titulo" />
</androidx.constraintlayout.widget.ConstraintLayout>